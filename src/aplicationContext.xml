<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.1.xsd
">
    <!-->IMPORTAR ARCHIVO datosEmpresa.propiedades externo<-->
    <context:property-placeholder location="classpath:IoC/datosEmpresa.propiedades"></context:property-placeholder>


    <!-->aca se configura la dependencia que se quiera usar, en esta caso, informes.<-->
    <bean id="miInforme" class="IoC.Informes">
<!--dependencia-->
    </bean>

<!-->aca se configura el ID y quien va a usar el bean<-->
    <!--> !!!!!!en este caso, JEFE EMPLEADO !!!!!!!! <bean id="miEmpleado" class="IoC.JefeEmpleado"> <-->
    <bean id="miEmpleado" class="IoC.JefeEmpleado">
    <constructor-arg ref="miInforme"></constructor-arg>
    </bean>


<!-->BEAN PARA SECRETARIOeMPLEADO<-->
    <bean id="miSecretarioEmpleado" class="IoC.SecretarioEmpleado">

        <property name="informeNuevo" ref="miInforme">
            <!--en caso de usar metodo Setter en vez de un constructor, se pone el metodo SIN EL "SET" y la primera letra en minuscula-->
        </property>
<!-->TOMA EL DATO EMAIL DESDE EL ARCHIVO PROPIEDADES<-->
        <property name="email" value="${email}"></property>

        <property name="nombreEmpresa" value="nombre de empresa PRUEBA"></property>
    </bean>


</beans>